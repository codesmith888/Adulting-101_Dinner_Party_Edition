<h1>Welcome to Your <%= menu.name %> Menu</h1>
<div id="Appetizer">
  <h2>Appetizer:</h2>
    <h3> <%= appetizer[0] %> </h3>
    <a href= "<%= appetizer[1] %>">Click to view recipe.</a>
    <img src="<%= appetizer[2] %>">
</div>
<div id="MainCourse">
  <h2>Main Course:</h2>
    <h4><%= main[0] %> </h4>
    <a href= "<%= main[1] %>">Click to view recipe.</a>
    <img src="<%= main[2] %>">
</div>
<div id="Side">
  <h2>Side Dish:</h2>
    <h4><%= side[0] %> </h4>
    <a href="<%= side[1] %>">Click to view recipe.</a>
    <img src="<%= side[2] %>">
</div>
<div id="Dessert">
  <h2>Dessert:</h2>
    <h4><%= dessert[0] %></h4>
    <a href="<%= dessert[1] %>">Click to view recipe.</a>
    <img src="<%= dessert[2] %>">
</div>
<div class="deleteAndEdit">
  <form method="POST" action="/adulting101/<%= menu.id %>/?_method=DELETE">
    <input type="submit" value="Delete This Menu">
  </form>
</div>