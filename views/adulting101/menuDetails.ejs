<div id="menuDetails">
  <h1>Welcome to Your <%= menu.name %> Menu</h1>
  <div id="Appetizer">
    <h2>Appetizer:</h2>
      <h3> <%= appetizer[0] %> </h3>
      <a href= "<%= appetizer[1] %>">Click to view recipe.</a>
      <img src="<%= appetizer[2] %>">
      <form method="POST" action="favorites">
        <input type="hidden" name="favoriteInfo" value="<%= appetizer[0] %> | <%= appetizer[1] %> | <%= appetizer[2] %>">
        <input type="submit" value="Save to Favorites">
      </form>
      </div>
  <div id="MainCourse">
    <h2>Main Course:</h2>
      <h4><%= main[0] %> </h4>
      <a href= "<%= main[1] %>">Click to view recipe.</a>
      <img src="<%= main[2] %>">
      <form method="POST" action="favorites">
        <input type="hidden" name="favoriteInfo" value="<%= main[0] %> | <%= main[1] %> | <%= main[2] %>">
        <input type="submit" value="Save to Favorites">
      </form>
  </div>
  <div id="Side">
    <h2>Side Dish:</h2>
      <h4><%= side[0] %> </h4>
      <a href="<%= side[1] %>">Click to view recipe.</a>
      <img src="<%= side[2] %>">
      <form method="POST" action="favorites">
        <input type="hidden" name="favoriteInfo" value="<%= side[0] %> | <%= side[1] %> | <%= side[2] %>">
        <input type="submit" value="Save to Favorites">
      </form>
  </div>
  <div id="Dessert">
    <h2>Dessert:</h2>
      <h4><%= dessert[0] %></h4>
      <a href="<%= dessert[1] %>">Click to view recipe.</a>
      <img src="<%= dessert[2] %>">
      <form method="POST" action="favorites">
        <input type="hidden" name="favoriteInfo" value="<%= dessert[0] %> | <%= dessert[1] %> | <%= dessert[2] %>">
        <input type="submit" value="Save to Favorites">
      </form>
  </div>
  <div class="deleteAndEdit">
    <form method="POST" action="/adulting101/<%= menu.id %>/?_method=DELETE">
      <input type="submit" value="Delete This Menu">
    </form>
    <form method="POST" action="/adulting101/<%= menu.id %>/?_method=PUT">
      <label for="menuName">New Menu Name</label>
      <input type="text" name="name" value="<%= menu.name %>">
      <input type="submit" value="Edit Menu Name">
    </form>
  </div>
  <footer>
  <a href='https://www.freepik.com/free-photos-vectors/food'>Food photo created by valeria_aksakova - www.freepik.com</a>
  </footer>
</div>