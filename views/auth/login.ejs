<form id="loginForm" action="/auth/login" method="POST">
  <div class="form-group">
    <label for="authEmail" class="loginFormLabel">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>
  <div class="form-group">
    <label for="authPassword" class="loginFormLabel">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password">
  </div>
  <input class="modalButton" type="submit">
</form>